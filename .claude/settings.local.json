{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(poetry lock:*)"
    ]
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -q 'git commit'; then echo 'UPDATE_DIARY'; fi"
          }
        ]
      }
    ]
  }
}
