{
  "permissions": {
    "allow": [
      "Bash(git remote add:*)",
      "Bash(git push:*)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff format:*)",
      "Bash(gh repo view:*)",
      "Bash(gh api:*)",
      "Bash(du:*)",
      "Bash(find:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check . --fix && uv run ruff format ."
          }
        ]
      }
    ]
  }
}
