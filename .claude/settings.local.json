{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(poetry lock:*)",
      "Bash(gcloud secrets versions access:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push)",
      "Bash(gcloud services enable:*)",
      "Bash(gcloud logging read:*)",
      "Bash(jq:*)",
      "Bash(uv run ruff:*)",
      "Bash(git log:*)",
      "Bash(curl:*)",
      "Bash(gcloud builds list:*)",
      "Bash(gcloud run services describe:*)",
      "Bash(gcloud builds triggers list:*)",
      "Bash(gcloud run revisions list:*)",
      "Bash(terraform state list:*)",
      "Bash(gcloud builds triggers describe:*)",
      "Bash(gcloud builds log:*)",
      "Bash(gcloud run revisions describe:*)",
      "Bash(gcloud builds describe:*)",
      "WebFetch(domain:docs.streamlit.io)",
      "WebFetch(domain:github.com)",
      "Bash(uv run pytest:*)",
      "Bash(python:*)",
      "Bash(python3:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/gaku/project/job-recommender/scripts/pre-terraform-apply.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check --fix $CLAUDE_FILE_PATHS"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false
  },
  "plansDirectory": "./.claude/plans"
}
