    "version": "0.2.0",
    "configurations": [
        {
            "name": "streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/app/main.py"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "preLaunchTask": "load-env",
            "envFile": "${workspaceFolder}/.env.local"
        }
    ]
}